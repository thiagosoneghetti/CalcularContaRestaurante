<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fc6407"
    android:paddingLeft="23dp"
    android:paddingRight="23dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="223dp"
        android:text="Taxa de serviço (10%) R$:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginBottom="230dp"
        android:text="Conta total R$:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginBottom="192dp"
        android:text="Valor por pessoa R$:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="43dp"
        android:text="Consumo total R$:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="80dp"
        android:text="Couvert artístico R$:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="120dp"
        android:text="Dividir conta por:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/consumoTotalId"
        style="@android:style/Widget.Holo.EditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="none|numberDecimal" />

    <EditText
        android:id="@+id/couvertId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignStart="@+id/consumoTotalId"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/dividirContaID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignStart="@+id/consumoTotalId"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/botaoCalcularId"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:text="Calcular Conta Final" />

    <TextView
        android:id="@+id/taxaDeServicoId"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignStart="@+id/consumoTotalId"
        android:background="@android:color/white"
        android:paddingLeft="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/contaTotalID"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignStart="@+id/consumoTotalId"
        android:background="@android:color/white"
        android:paddingLeft="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/valorPessoaID"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignStart="@+id/consumoTotalId"
        android:background="@android:color/white"
        android:paddingLeft="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

</RelativeLayout>